generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  username    String   @unique
  password    String
  role        UserRole
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  fullName    String
  email       String   @unique
  designation String?
  phone       String?
}

model Asset {
  id             String        @id @default(uuid())
  name           String
  category       AssetCategory
  status         AssetStatus   @default(ACTIVE)
  serialNumber   String?       @unique
  location       String
  isQrGenerated  Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  lastVerifiedAt DateTime?
  isDeleted      Boolean       @default(false)
  registeredBy   String?
}

model VerificationLog {
  id         String   @id @default(uuid())
  assetId    String
  verifiedBy String
  verifiedAt DateTime @default(now())
}

model Complaint {
  id          String          @id @default(uuid())
  assetId     String
  reportedBy  String
  createdAt   DateTime        @default(now())
  status      ComplaintStatus @default(PENDING)
  description String
  imageUrl    String?
}

model QrCode {
  id           String   @id @default(uuid())
  code         String   @unique
  isAssigned   Boolean  @default(false)
  createdAt    DateTime @default(now())
  assetId      String?  @unique
  registeredBy String?
}

enum UserRole {
  ADMIN
  STAFF
}

enum AssetStatus {
  ACTIVE
  MAINTENANCE
  RETIRED
  LOST
}

enum AssetCategory {
  LAPTOP
  CAMERA
  MOBILE
  TABLET
  OTHER
}

enum ComplaintStatus {
  PENDING
  RESOLVED
}
